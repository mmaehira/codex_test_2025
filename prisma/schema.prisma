generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ScriptKind {
  ARTICLE
  DAILY_DIGEST
}

enum MailStatus {
  SUCCESS
  FAILURE
}

enum MailKind {
  DAILY_DIGEST
}

model Source {
  id        String   @id @default(cuid())
  name      String
  rssUrl    String
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())

  articles  Article[]
}

model Article {
  id            String   @id @default(cuid())
  sourceId      String
  url           String   @unique
  urlNormalized String
  title         String
  publishedAt   DateTime?
  fetchedAt     DateTime
  excerpt       String?
  tags          String[]
  createdAt     DateTime @default(now())

  source   Source   @relation(fields: [sourceId], references: [id])
  analyses Analysis[]
  scripts  Script[]

  @@index([urlNormalized])
}

model Analysis {
  id          String   @id @default(cuid())
  articleId   String
  model       String
  contentJson Json
  createdAt   DateTime @default(now())

  article Article @relation(fields: [articleId], references: [id])
}

model Script {
  id        String     @id @default(cuid())
  articleId String?
  kind      ScriptKind
  text      String
  createdAt DateTime   @default(now())

  article    Article?  @relation(fields: [articleId], references: [id])
  audioFiles AudioFile[]
}

model AudioFile {
  id          String   @id @default(cuid())
  scriptId    String
  storageKey  String
  publicUrl   String
  durationSec Int?
  createdAt   DateTime @default(now())

  script Script @relation(fields: [scriptId], references: [id])
}

model MailLog {
  id           String    @id @default(cuid())
  kind         MailKind
  toEmail      String
  subject      String
  status       MailStatus
  errorMessage String?
  sentAt       DateTime?
  createdAt    DateTime  @default(now())
}
